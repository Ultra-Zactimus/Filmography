@{
  Layout = "_Layout";
}

@using Filmography.Models;
@model List<Filmography.Models.Actor>;

<header>
  <p><strong>@Html.ActionLink("ADD NEW ACTOR", "Create")</strong></p>
</header>
<div id="push"></div>
<h1>Actors</h1>

@if (@Model.Count == 0)
{
  <h3>No actors have been added yet!</h3>
} 

@foreach (Actor actor in Model)
{
  <li><strong><em>@Html.ActionLink($"{actor.ActorName}", "Details", new { id = actor.ActorId })</em></strong></li>
}