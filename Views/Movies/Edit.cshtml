@{
  Layout = "_Layout";
}

@model Filmography.Models.Movie

<header>
  <p><strong>@Html.ActionLink("MOVIES", "Index")</strong></p>
</header>
<div id="push"></div>
<h2>Edit</h2>

<h4>Edit this film's details: @Html.DisplayFor(model => model.MovieName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MovieId)

  @Html.LabelFor(model => model.MovieName)
  @Html.EditorFor(model => model.MovieName)

  @Html.LabelFor(model => model.Description)
  @Html.EditorFor(model => model.Description)

  <input type="submit" value="Save" />
}