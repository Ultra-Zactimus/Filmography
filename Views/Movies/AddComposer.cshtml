@{
  Layout = "_Layout";
}

@model Filmography.Models.Movie;

<header>
  <p><strong>@Html.ActionLink("MOVIES", "Index")</strong></p>
</header>
<div id="push"></div>

@if (@ViewBag.num != 0)
{
  <h2>Add a composer</h2>
  <h4>Add a composer to this movie: @Html.DisplayFor(model => model.MovieName)</h4>
  @using (Html.BeginForm())
  {
    @Html.Hidden("MovieId")
    @Html.Label("Select composer")
    @Html.DropDownList("ComposerId")
    <input type="submit" value="Save" />
  }
}
else
{
  <h3>There are no composers left, make a new composer</h3>
}