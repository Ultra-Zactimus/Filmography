@{
  Layout = "_Layout";
}

@model Filmography.Models.Movie

<h2>Movie Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.MovieName): @Html.DisplayFor(model => model.Description)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This movie has not been added to the Database yet</p>
}
else
{
  <h4>Placeholder text:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Movie.MovieName</li>
    @using (Html.BeginForm("DeleteMovie", "Movies"))
    {
      @Html.Hidden("joinId", @join.MovieWikiId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

<p>@Html.ActionLink("Back to  movie list", "Index")</p>
<p>@Html.ActionLink("Edit Movie", "Edit", new { id = Model.MovieId })</p>
<p>@Html.ActionLink("Delete Movie", "Delete", new { id = Model.MovieId })</p>