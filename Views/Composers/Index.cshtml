@{
  Layout = "_Layout";
}

@using Filmography.Models;
@model List<Filmography.Models.Composer>;

<header>
  <p>@Html.ActionLink("Add new composer", "Create", "Composers")</p>
</header>
<div id="push"></div>
<h1>Composers</h1>

@if (@Model.Count == 0)
{
  <h3>No composers have been added yet!</h3>
} 

@foreach (Composer composer in Model)
{
  <li><em><strong>@Html.ActionLink($"{composer.ComposerName}", "Details", new { id = composer.ComposerId })</strong></em></li>
}